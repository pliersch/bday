<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginRight="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewBirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:text="@string/birthday"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/textViewAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/textViewBirthday"
        android:layout_alignStart="@+id/textViewBirthday"
        android:layout_alignEnd="@+id/textViewBirthday"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/textViewDaysLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/daysLeft"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@+id/textViewAge"
        android:layout_alignStart="@+id/textViewAge"
        android:textSize="16dp"/>

</RelativeLayout>
