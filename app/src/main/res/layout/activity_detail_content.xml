<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/spacing_medium"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_large"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/textViewBirthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/birthday"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textViewBirthday"
            android:layout_alignStart="@+id/textViewBirthday"
            android:layout_below="@+id/textViewBirthday"
            android:text="@string/age"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewDaysLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewAge"
            android:layout_below="@+id/textViewAge"
            android:text="@string/daysLeft"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_alert"
            android:id="@+id/checkBox2"
            android:layout_below="@+id/textViewDaysLeft"
            android:layout_alignParentStart="true"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_alert"
            android:id="@+id/checkBox3"
            android:layout_below="@+id/textViewDaysLeft"
            android:layout_toEndOf="@+id/checkBox2"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_sms"
            android:id="@+id/checkBox4"
            android:layout_below="@+id/textViewDaysLeft"
            android:layout_toEndOf="@+id/checkBox3"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
